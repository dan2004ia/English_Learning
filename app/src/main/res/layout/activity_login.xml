<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/gradient"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="900dp"
        android:contentDescription="@string/image"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_border"
        android:src="@drawable/login" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="103dp"
        android:layout_marginRight="50dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/gradient"
        android:drawableEnd="@drawable/email_svgrepo_com"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingVertical="15dp"
        android:textColorHint="#546E7A" />

    <EditText
        android:id="@+id/mobile_et"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_et"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:autofillHints="phone"
        android:drawableEnd="@drawable/phone_flip_alt_svgrepo_com"
        android:hint="@string/phone"
        android:inputType="number"
        android:paddingVertical="15dp" />

    <EditText
        android:id="@+id/password_et"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile_et"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:autofillHints="password"
        android:drawableEnd="@drawable/lock_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
        android:hint="@string/password"
        android:background="@drawable/gradient"

        android:inputType="numberPassword"
        android:paddingVertical="15dp" />

    <TextView
        android:id="@+id/tv_signup_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_et"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/don_t_have_account_signup_full"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="48dp"
        android:padding="8dp"
        />


    <Button
        android:id="@+id/login_btn"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_signup_prompt"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_border"
        android:backgroundTint="@color/pink1"
        android:padding="18dp"
        android:text="@string/login"
        android:textColor="#C231D9"
        android:textSize="25sp" />


</RelativeLayout>
